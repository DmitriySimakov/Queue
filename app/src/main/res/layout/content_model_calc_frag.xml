<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/lambda_ET"
            android:hint="@string/lambda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="numberDecimal"
            android:layout_margin="@dimen/element_margin"/>

        <EditText
            android:id="@+id/mu_ET"
            android:hint="@string/mu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="numberDecimal"
            android:layout_margin="@dimen/element_margin"/>

        <Button
            android:id="@+id/ok_Btn"
            android:text="@string/ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/t_formula_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"
            android:adjustViewBounds="true"
            android:contentDescription="formula t"
            app:srcCompat="@drawable/empty_image"/>

        <TextView
            android:id="@+id/t_TV"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/k_formula_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"
            android:adjustViewBounds="true"
            android:contentDescription="formula k"
            app:srcCompat="@drawable/empty_image"/>

        <TextView
            android:id="@+id/k_TV"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/p1_TV"
            android:text="P[k] = "
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"/>

        <ImageView
            android:id="@+id/p_formula_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"
            android:adjustViewBounds="true"
            android:contentDescription="formula P"
            app:srcCompat="@drawable/empty_image"/>

        <TextView
            android:id="@+id/p_TV"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/element_margin"/>

    </LinearLayout>

</LinearLayout>